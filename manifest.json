{
  "manifest_version": 3,
  "name": "AGA's CarCheck",
  "version": "10.0",
  "description": "Analysiert Fahrzeug-Anzeigen mit Verlauf, Folgefragen und mehr.",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*.mobile.de/*",
    "*://*.autoscout24.de/*",
    "*://*.kleinanzeigen.de/*",
    "https://carcheckai.netlify.app/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
